@model ArchivosPlanosWebV2._5.Models.Type_Carril

@{
    ViewBag.Title = "Eliminar Carril";
}
<div class="container">
    <div class="card shadow-lg" style="margin-top:1rem !important">
        <div class="card-body">
            <h2>Eliminar Carril</h2>

            <h3>¿Está seguro de eliminar esta plaza?</h3>
            <div>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Type_Plaza.Nom_Plaza)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Type_Plaza.Nom_Plaza)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Num_Gea)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Num_Gea)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Num_Capufe)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Num_Capufe)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Num_Tramo)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Num_Tramo)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-danger" style="margin-bottom:5px !important;" />

                    </div>
                    @Html.ActionLink("Regresar a Carriles", "VerCarril", new { IdPlaza = ViewBag.SelectedPlaza })
                }
            </div>
            </div>
        </div>
    </div>
