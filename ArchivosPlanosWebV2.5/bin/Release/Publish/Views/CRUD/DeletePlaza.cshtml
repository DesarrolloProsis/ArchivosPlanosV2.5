@model ArchivosPlanosWebV2._5.Models.Type_Plaza
@{
    ViewBag.Title = "Eliminar Plaza";
}
<div class="container">
    <div class="card shadow-lg" style="margin-top:1rem !important">
        <div class="card-body">
            <h2>Eliminar Plaza</h2>

            
            <div>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Type_Delegacion.Nom_Delegacion)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Type_Delegacion.Nom_Delegacion)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Num_Plaza)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Num_Plaza)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Nom_Plaza)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Nom_Plaza)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-danger" style="margin-bottom:5px !important;" />

                    </div>
                    @Html.ActionLink("Regresar a Plazas", "VerPlaza", new { Id_Del = ViewBag.SelectedDelegacion })
                }
            </div>
            </div>
        </div>
    </div>
